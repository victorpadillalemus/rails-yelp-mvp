<div class="form">
<h1>Add your review to: <% @restaurant.name %></h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RATINGS %>
  </div>

  <div class="form-actions">
    <%= f.submit 'create review', class: "btn btn-success" %>
  </div>
  <% end %>
  <p><%= link_to "<- Go back", restaurant_path(@restaurant), class: "btn btn-primary mt-5"%></p>
</div>
